mixin fotos(encabezado, desarrollo, imagen, subtitle, title)
    .thumbnail
        .tittle.text-center
            small= encabezado
            h3= desarrollo
        .captions
            .pull-left
                img.polaroid(src=imagen)
            .texto-right
                span= subtitle
                p=  title

