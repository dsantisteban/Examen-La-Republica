//All
mixin addimage(img)
    img(src="assets/image/"+img, alt="")
//Block
mixin blockimage(img,h,texto) 
    .block  
        .blockimg
            +addimage(img)
        .blocktext
            if h==1
                a(href="#")
                    h1= texto 
            else if h==2
                a(href="#")
                    h3= texto
                   
mixin blocklista(img,texto)        
    li
        h6
             span
                +addimage(img)
                span= texto

mixin imgslide(img1,img2)
    block append slide
        .col-md-2.col-xs-6.text-center.pd-0
            +addimage(img1)
            h6 Mario Vargas Llosa
            h5 Megarrenincia apulpinante
        .col-md-2.col-xs-6.text-center.pd-0
            +addimage(img2)
            h6 Augusto Álvarez Rodrich 
            h5 Respuesta a una derrota estridente
    append slide    
    append slide  
    
mixin todosobre(img,texto1,texto2,texto3)
    .rcdro
        h4= texto1
        .block 
            .blockimg
                +addimage(img)
            .blocktext
                a(href="    ")
                    h4= texto2
        h5 Todo sobre
            b= texto3

mixin gif-icon(img,icon,visible)
    if visible==1
        +addimage(img)
        i(class=icon)
     
mixin newsocial(img2,img3,texto3)   
        h6
            span
                +addimage(img2)
                +addimage(img3)
                span= texto3 
